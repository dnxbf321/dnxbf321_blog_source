#header
  display flex
  @media screen and (min-width: 500px)
    margin 50px auto 20px
    text-shadow 0 0 1px #fff
  a
    color #999
    &:hover
      color color-link
      text-decoration none

  h1
    font-size 2.5em
    font-weight normal
    line-height 1

  h2
    font-size 0.9em
    font-weight normal
    line-height 1
    margin-top 10px
  > *
    margin-bottom 30px
  #main-nav
    font-family font-title
    line-height 2.5em
    width auto
    ul
      list-style none
      li
        float left
        margin-left 0
        margin-left 30px
        @media screen and (min-width: 500px)
          margin-right 30px;
          margin-right 0