icon-size = 32px
icon-gap = 25px

article
  background #fff
  box-shadow 1px 2px 3px #ddd
  &.page
    padding-left 20px
    .icon
      display none

  &.post
    .icon
      &:before
        content '\f016'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

    .title
      a
        &:after
          color color-meta
          content '\f08e'
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content
    margin-bottom 50px
    padding 20px 20px 15px(icon-size + icon-gap + 20)
    padding-left 20px
    @media screen and (max-width: 600px)
    position relative

  .gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

    img
      height auto
      left 0
      max-width 100%
      min-width 100%
      opacity 0
      position absolute
      top 0

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      cursor pointer
      height 100%
      position absolute
      top 0
      width 50%
      &:before
        color #fff
        font 24px / 1 font-icon
        position absolute
        text-align center
        text-shadow 0 0 15px rgba(0, 0, 0, 0.5)
        top 50%
        margin-top -12px
        width 24px

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  header
    .icon
      color color-link
      display none
      height icon-size
      left 20px
      margin-right icon-gap
      position absolute
      top 20px
      @media screen and (max-width: 600px)
      width icon-size
      &:before
        font 32px font-icon
        left 0
        position absolute
        text-align center
        top 0
        width 32px

    time
      color color-meta
      display block
      font 0.9em font-title
      line-height 1
      margin-bottom 5px

    .title
      font-weight normal
      a
        color color-font
        &:hover
          color color-link
          text-decoration none

  .entry
    line-height 1.6
    text-align justify
    p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container
      margin-top 15px

    blockquote
      border-bottom 1px solid color-border
      border-top 1px solid color-border
      font-family font-serif
      font-size 1.2em
      font-style italic
      padding 0 30px 15px
      text-align center
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            color #ccc
            content 'â€”'
            padding 0 0.5em

    code, pre
      font-family font-mono

    code
      background #eee
      border 1px solid color-border
      border-radius 3px
      color #666
      font-size 0.9em
      margin 0 2px
      padding 0 5px

    pre
      background #eee
      border 1px solid color-border
      border-radius 2px
      margin-top 15px
      overflow auto
      padding 7px 15px
      code
        background none
        border none
        border-radius 0
        margin 0
        padding 0

    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

    h1, h2
      border-bottom 1px solid color-border
      font-weight normal
      margin-top 20px
      padding-bottom 10px

    h3, h4, h5, h6
      font-weight normal

    img, video
      border none
      height auto
      max-width 100%

    iframe
      border none

    .caption
      color color-meta
      display block
      font-size 0.9em
      margin-top 5px
      padding-left 25px
      position relative
      &:before
        content '\f040'
        font 1.3em font-icon
        left 0
        position absolute
        position absolute
        top 3px

    .video-container
      height 0
      overflow hidden
      padding-bottom 56.25%
      padding-top 30px
      position relative
      iframe, object, embed
        height 100%
        left 0
        margin-top 0
        position absolute
        top 0
        width 100%

    .pullquote
      border none
      float right
      font-size 1.5em
      margin 1em 0 0.5em 1.5em
      padding 0
      text-align left
      width 45%

  footer
    border-top 1px solid color-border
    color color-meta
    font-size 0.9em
    line-height 16px
    margin-top 15px
    min-height 16px
    padding-top 10px
    position relative
    a
      color color-meta
      &:hover
        color color-link
        text-decoration none
      &:before
        font 1.1em font-icon
        padding-right 10px
        vertical-align middle

      &.more-link
        &:before
          content '\f054'

      &.comment-link
        &:before
          content '\f075'

    .categories, .tags
      margin 5px 0
      padding-left 25px
      position relative
      &:before
        font 1.1em font-icon
        position absolute

    .categories
      &:before
        content '\f07b'
        left 1px
        top 2px

    .tags
      &:before
        content '\f02b'
        left 2px
        top 3px

    .addthis
      margin-top 15px
      iframe
        margin-top 0
